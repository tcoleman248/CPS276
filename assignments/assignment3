Index.PHP
<?php
$output = "";

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    require_once 'processNames.php';
    $output = addClearNames();       
}
?>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Name Sorter Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
    <h2>Add Names</h2>
    <form method="post" action="index.php">
        <div class="mb-3">
            <label for="fullname" class="form-label">Enter first and last name:</label>
            <input type="text" class="form-control" id="fullname" name="fullname">
        </div>

        <div class="mb-3">
            <button type="submit" name="add" class="btn btn-primary">Add Name</button>
            <button type="submit" name="clear" class="btn btn-danger">Clear Name</button>
        </div>

        
        <textarea style="height: 500px;" class="form-control" id="namelist" name="namelist"><?php echo $output ?></textarea>
    </form>
</body>
</html>



processNames.php
<?php
// function to add and clear names
function addClearNames() {
    if (isset($_POST['namelist'])) {
        $nameList = $_POST['namelist'];
    } else {
        $nameList = "";
    }

    if (isset($_POST['clear'])) {
        return "";
    }

    $fullName = trim($_POST['fullname']);

    // splitting the first and last name
    $parts = explode(" ", $fullName);
    $firstName = ucfirst(strtolower($parts[0]));
    $lastName = ucfirst(strtolower($parts[1]));

    $formattedName = "$lastName, $firstName";

    //converting what goes in the text are to array
    $nameArray = [];
    if (!empty($nameList)) {
        $nameArray = explode("\n", $nameList);
    }

    // new name that is formatted
    array_push($nameArray, $formattedName);

    sort($nameArray);

    //converting back into a string
    return implode("\n", $nameArray);
}
?>
